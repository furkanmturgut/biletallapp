<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:src="@drawable/logo"
        android:layout_gravity="center"
        android:layout_marginTop="80dp"></ImageView>

    <TextView
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:gravity="center"
        android:text="Otobüs Bilet All'a"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_gravity="center"
        android:layout_marginTop="40dp"></TextView>
    <TextView
        android:layout_width="220dp"
        android:layout_height="40dp"
        android:text="HOŞGELDİNİZ"
        android:drawableRight="@drawable/buss"
        android:textSize="30sp"
        android:textStyle="bold"
        android:textColor="#000"
        android:layout_gravity="center"></TextView>

    <Button
        android:layout_width="300dp"
        android:layout_height="70dp"
        android:background="@drawable/loginbutton"
        android:text="Giriş Yap"
        android:textColor="#FF700A"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:onClick="girisYap"></Button>
    <Button
        android:layout_width="280dp"
        android:layout_height="45dp"
        android:background="@drawable/registrationbutton"
        android:text="Kayıt oluştur"
        android:textColor="#000"
        android:layout_gravity="center"
        android:onClick="kayitOl"
     ></Button>







</LinearLayout>