<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="250dp"
    android:background="@drawable/photom">
    
    <androidx.cardview.widget.CardView
        android:layout_width="310dp"
        android:layout_height="200dp"
        android:layout_gravity="center"
        app:cardCornerRadius="20dp"
        android:layout_marginTop="20dp">
        
        <LinearLayout
            android:layout_width="310dp"
            android:layout_height="200dp"
            android:orientation="vertical">


            <TextView
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:text="Seyehat Bilgisi"
                android:layout_gravity="center"
                android:textColor="#FF700A"
                android:textSize="25sp"></TextView>
            <TextView
                android:id="@+id/textViewYolculuk"
                android:layout_width="300dp"
                android:layout_height="35dp"
                android:text=""
                android:gravity="center"
                android:layout_gravity="center"
                android:textColor="#000"
                android:textSize="25sp"></TextView>

            <TextView
                android:id="@+id/textViewTarih"
                android:layout_width="170dp"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:textColor="#000"
                android:textSize="25sp"></TextView>

            <TextView
            android:id="@+id/textViewFiyat"
            android:layout_width="170dp"
            android:layout_height="35dp"
            android:text=""
            android:layout_gravity="center"
                android:gravity="center"
            android:textColor="#000"
            android:textSize="25sp"></TextView>

            <Button
                android:id="@+id/buttonSatinAl"
                android:layout_marginTop="7dp"
                android:layout_width="200dp"
                android:layout_height="40dp"
                android:background="@drawable/btnsplash"
                android:text="SatÄ±n Al"
                android:layout_gravity="center"></Button>


        </LinearLayout>
        
        
    </androidx.cardview.widget.CardView>
    
    
    
    
</LinearLayout>